{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "typster",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "all": true, 
        "ask": true, 
        "confirm": true, 
        "message": true,
        "open": true,
        "save": true 
      },
      "path": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "cn.wflixu.typster",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "typster",
        "x": 2000,
        "y": 100,
        "width": 1200,
        "height": 900
      }
    ]
  }
}
