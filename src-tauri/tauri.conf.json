{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false,
    "features": [
      "embed-fonts"
    ]
  },
  "package": {
    "productName": "typster",
    "version": "0.0.1"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "allowlist": {
      "all": true,
      "http": {
        "all": true,
        "scope": ["http://127.0.0.1:8443/chunk/*"]
      },
      "dialog": {
        "all": true, 
        "ask": true, 
        "confirm": true, 
        "message": true,
        "open": true,
        "save": true 
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["$HOME/**/*"]
      },
      "shell": {
        "all": true,
        "open": true
      },
      "clipboard":{
        "all": true,
        "readText": true,
        "writeText": true
      },
      "window": {
        "all": true,
        "startDragging": true,
        "setPosition": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "cn.wflixu.typster",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "typster",
        
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "theme": "Light",
        "x": 2000,
        "y": 100,
        "width": 1200,
        "height": 1200
      }
    ]
  }
}
